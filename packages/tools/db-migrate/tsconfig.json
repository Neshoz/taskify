{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ES2021",
    "module": "nodenext",
    "lib": ["ES2021"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "strict": true,
    //    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*"]
}
